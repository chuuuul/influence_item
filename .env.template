# 환경 변수 템플릿 파일
# 실제 사용 시 .env 파일로 복사하고 값을 설정하세요

# API 키
GOOGLE_API_KEY=your_google_api_key_here
COUPANG_ACCESS_KEY=your_coupang_access_key_here
COUPANG_SECRET_KEY=your_coupang_secret_key_here

# Gemini API 키 로테이션 (콤마로 구분)
GEMINI_API_KEYS=key1,key2,key3
GEMINI_RATE_LIMIT_PER_MINUTE=60
GEMINI_RATE_LIMIT_PER_DAY=1500

# Google Sheets 설정
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SERVICE_ACCOUNT_FILE=path_to_service_account_json

# 보안 설정
MASTER_KEY=your_master_encryption_key_here
USE_SSL=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Slack 알림 (선택적)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# 서버 설정
GPU_SERVER_URL=http://gpu-server:8001
CPU_SERVER_URL=http://cpu-server:8501

# 데이터베이스
DATABASE_URL=sqlite:///influence_item.db

# 로깅 레벨
LOG_LEVEL=INFO

# 개발/프로덕션 환경
ENVIRONMENT=production

# CUDA 설정
CUDA_VISIBLE_DEVICES=0