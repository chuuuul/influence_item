# US East (N. Virginia) Region Configuration
REGION=us-east-1
AWS_REGION=us-east-1
AVAILABILITY_ZONE=us-east-1a

# Database Configuration
DATABASE_URL=postgresql://influence_user:${DB_PASSWORD}@db-cluster-us-east-1.cxtxxxxxxxxxxx.us-east-1.rds.amazonaws.com:5432/influence_db
DATABASE_REPLICA_URL=postgresql://influence_user:${DB_PASSWORD}@db-cluster-us-east-1-ro.cxtxxxxxxxxxxx.us-east-1.rds.amazonaws.com:5432/influence_db
DATABASE_MAX_CONNECTIONS=20
DATABASE_CONNECTION_TIMEOUT=30

# Redis Configuration
REDIS_CLUSTER_ENDPOINTS=redis-us-east-1-001.xxxx.cache.amazonaws.com:6379,redis-us-east-1-002.xxxx.cache.amazonaws.com:6379,redis-us-east-1-003.xxxx.cache.amazonaws.com:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_SSL=true
REDIS_CLUSTER_MODE=true

# CDN Configuration
CDN_ENDPOINT=https://d1234567890.cloudfront.net
CDN_REGION=us-east-1
S3_BUCKET=influence-item-assets-us-east-1
S3_REGION=us-east-1

# GPU Configuration
GPU_INSTANCES=2
GPU_TYPE=g4dn.xlarge
GPU_MAX_BATCH_SIZE=8
GPU_MEMORY_LIMIT=16GB

# Monitoring
PROMETHEUS_ENDPOINT=http://prometheus-us-east-1:9090
GRAFANA_ENDPOINT=http://grafana-us-east-1:3000
LOG_LEVEL=info
METRICS_ENABLED=true

# Load Balancer
ALB_DNS_NAME=influence-us-east-1-alb-1234567890.us-east-1.elb.amazonaws.com
TARGET_GROUP_ARN=arn:aws:elasticloadbalancing:us-east-1:123456789012:targetgroup/influence-tg-us-east-1/1234567890123456

# Auto Scaling
MIN_INSTANCES=2
MAX_INSTANCES=10
TARGET_CPU_UTILIZATION=70
SCALE_UP_COOLDOWN=300
SCALE_DOWN_COOLDOWN=600

# Health Check
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_HEALTHY_THRESHOLD=2
HEALTH_CHECK_UNHEALTHY_THRESHOLD=3

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=100M

# Security
SSL_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012
WAF_WEB_ACL_ARN=arn:aws:wafv2:us-east-1:123456789012:global/webacl/InfluenceItemWAF/12345678-1234-1234-1234-123456789012
SECURITY_GROUP_IDS=sg-0123456789abcdef0,sg-0987654321fedcba0

# Network
VPC_ID=vpc-0123456789abcdef0
SUBNET_IDS=subnet-0123456789abcdef0,subnet-0987654321fedcba0,subnet-0abcdef123456789a
INTERNET_GATEWAY_ID=igw-0123456789abcdef0

# Backup Configuration
BACKUP_S3_BUCKET=influence-item-backups-us-east-1
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_ENCRYPTION=AES256

# Cost Optimization
SPOT_INSTANCES_ENABLED=true
SPOT_MAX_PRICE=0.50
RESERVED_INSTANCES_RATIO=0.3
SCHEDULED_SCALING_ENABLED=true