# N8N Docker Compose Environment Variables Template
# Copy this file to .env.n8n and fill in your actual values

# Domain and SSL Configuration
DOMAIN_NAME=your-domain.com
N8N_SUBDOMAIN=n8n
SSL_EMAIL=admin@your-domain.com

# Timezone Configuration
GENERIC_TIMEZONE=Asia/Seoul

# N8N Authentication
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here

# Execution Timeouts (in seconds)
EXECUTIONS_TIMEOUT=3600
EXECUTIONS_TIMEOUT_MAX=7200

# SMTP Configuration for Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SENDER=your-email@gmail.com

# Optional: Database Configuration (for PostgreSQL)
# DB_TYPE=postgresdb
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=n8n-password

# External API Keys (for workflows)
GOOGLE_SHEETS_API_KEY=your-google-sheets-api-key
GOOGLE_SHEETS_CHANNEL_LIST_ID=your_google_sheets_spreadsheet_id_here
GEMINI_API_KEY=your-gemini-api-key
COUPANG_PARTNER_API_KEY=your-coupang-api-key
COUPANG_PARTNER_SECRET_KEY=your-coupang-secret-key

# Python Analysis System Integration
PYTHON_ANALYSIS_ENDPOINT=http://localhost:8000
ANALYSIS_API_KEY=your_analysis_api_key_here

# Slack Integration (for workflow notifications)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL=#video-analysis
SLACK_CHANNEL_ID=your-channel-id

# Email Notification Configuration
ADMIN_EMAIL=admin@your-domain.com
SMTP_FROM_EMAIL=noreply@your-domain.com

# N8N Webhook Configuration
N8N_WEBHOOK_BASE_URL=https://n8n.your-domain.com
DASHBOARD_BASE_URL=http://localhost:8501

# Redis Configuration (for throttling)
REDIS_ENDPOINT=redis://localhost:6379

# YouTube RSS Feed URLs
YOUTUBE_RSS_BASE_URL=https://www.youtube.com/feeds/videos.xml?channel_id=

# Monitoring and Health Check URLs
HEALTH_CHECK_URL=https://your-domain.com/healthz
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-2